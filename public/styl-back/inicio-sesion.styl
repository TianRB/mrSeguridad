rojo-topo = #AF2F43
gris-clarito = rgb(230,230,230)
gris-oscuro = #333333
gris-medio = #E6E6E6
gris-fondo = #F2F2F2
gris-sobre = #5E5E5E
gris-texto = #666666

@import "nib"
@import "parts/inputs-material.styl"
@import "parts/btn-ripple.styl"

*
	margin 0 
	padding 0
body
	margin 0 
	padding 0
	width 100%
	height 100%
	background url("../img/fondo.png") no-repeat
	background-size cover
	font-family 'Ubuntu', sans-serif
	position relative
.inicio-sesion
	width 90%
	margin 0 auto
	margin-top 15%
	max-width 400px
	background #fff 
	padding 20px 0px
	border-radius 10px
	section
		width 80%
		margin 0 auto
		figure
			width 80%
			height auto
			margin 0px auto
			margin-bottom 30px
			img
				height auto
				width 100%
		form
			width 100%
		.input-sesion
			margin-bottom 45px
			width 100% !important
			margin-left 0 !important
	.btn-raised
		width 100% !important
		height 40px
		margin 0
		margin-bottom 10px
@media screen and (min-width:500px)
	.inicio-sesion
		position absolute
		left 50%
		margin-left -200px
		margin-top 10% !important
		




