.menu	
	width 45%
	height 100%
	display inline-block
	vertical-align top
	position absolute
	background negro-mr
	z-index 2
	margin-left -45%
	transition all .5s
.menu-desplegado 
	margin-left 0%
.seccion 
	font-size 1rem
	line-height 1.2rem
	color #fff
	cursor pointer
	h4 
		font-weight 300
	a 
		font-weight 300
		font-size .8rem
		text-decoration none
		color #fff
.nav
	width 100%
	margin-top 20px
	li 
		list-style none
		padding 10px 0
		padding-left 20px
	section
		padding 0% 10%
		margin-bottom 20px
.bloque
	border-left 1px solid gris-oscuro
	margin-top 10px
.seccion-activa
	background gris-sobre !important
.icon-flecha-abajo
	font-size .5rem
	float right
	transform rotate(-90deg)
.icon-flecha-abajo-activo
	.icon-flecha-abajo
		transform rotate(0deg) !important
@media screen and (min-width:1000px)
	.menu
		margin-left 0%
		width 20%
