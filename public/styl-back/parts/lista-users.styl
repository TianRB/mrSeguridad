.lista-usuarios
  width 100%
  height auto
  margin 0 auto
  font-size 0
  margin-top 15px !important
  padding-bottom 0 !important
  padding-top 0
  position relative
  article
    width 95%
    margin 0 auto
    padding 0px 0
  figure
    width 25%
    display inline-block
    vertical-align top 
    height 100%
    overflow hidden
    img 
      width auto
      height 100%
  section 
    width 75%
    display inline-block
    vertical-align top
    text-align left
    h2 
      font-size 1.2rem
      margin 0px 20px
      margin-top 15px
      color rojo-topo
    .texto-card-dos
      margin-top 10px
      p 
        width 50%
        display inline-block
        vertical-align top
        &:nth-child(2)
          text-align right
      .superada
        color green 
      .no-superada
        color red
    .datos-publi
      font-size .7rem
      margin 0 20px
      color gris-oscuro
      div
        margin-bottom 2px
        &:last-child
          margin-bottom 0px
    .contenido
      font-size .8rem 
      margin 0 20px
      display none
    .btns-notas
      margin 0 20px
      margin-top 15px
      border-top 1px solid gris-clarito
      .btn-flat
        padding .5rem .7rem
      .ripple-effect
        top 0px !important
  .foto-lista-users
    height 0
    padding-bottom 20%
    width 20%
    margin-top 15px
    margin-bottom 10px
    img 
      width 100%
      height auto
.filtro-usuarios
  width 95%
  margin 0px auto
  margin-top 20px
  div
    width 100%
    display inline-block
    vertical-align top
    position relative
    .buscador
      width 100%
      border 1px solid gris-clarito
      border-radius 5px
      height 30px
      line-height 30px
      input
        width 90%
        margin 0 auto
        border 0px !important
        height 100%
        font-size 1rem
      input:focus
        outline 0
      .icon-buscar
        font-size 1rem
        position absolute
        right 10px
        top 7px
        color gris-clarito
.grupo-filtro-usuarios
  height 30px
  margin-bottom 10px
  border-radius 5px
  overflow hidden
  border 1px solid gris-clarito
  select
    height 30px
    line-height 30px
    position relative
    z-index 1
    option
      height 30px
      line-height 30px
.btn-lista-usuarios 
  padding-top 10px !important 
  padding-bottom 20px 
  margin-left 20px
  margin-top 10px
  border-top 1px solid gris-clarito
  a 
    margin-left .5rem
  button
    margin 0 
    margin-left .5rem
    padding .5rem 1rem !important
    &:first-child
      margin-left 0rem
@media screen and (min-width:600px)
  .lista-usuarios
    width 100%
    article
      .datos-publi
        margin-top 10px
        div
          margin-bottom 3
      .foto-lista-users
        width 10%
        padding-bottom 10%
      section
        width 90%
  .texto-card
    width 30%
    display inline-block
    vertical-align top 
  .texto-card-dos
    width 35%
    margin-top 38px !important
  .contenido 
    display block !important
  .btn-lista-usuarios
    height 90px
    width 34%
    display inline-block
    vertical-align top 
    border-top 0px !important
    border-left 1px solid gris-clarito
    text-align center
    margin-top 10px
    margin-left 0
    padding-top 0px !important 
    padding-bottom 0px !important 
    .btn 
      margin-top 25px
    .btn-basura
      padding .35rem 1.2rem
      top 2px
    .icon-borrar
      font-size 1rem
  .filtro-usuarios 
    div
      width 20%
      margin-left 4%
      &:first-child
        margin-left 0%
@media screen and (min-width:1000px) 
  .lista-usuarios
    figure
      img
        height auto
        width 100%
    .texto-card
      width 35%
    .texto-card-dos
      width 30%
      p 
        &:nth-child(1)
          width 41% !important
        &:nth-child(2) 
          width 40% !important

