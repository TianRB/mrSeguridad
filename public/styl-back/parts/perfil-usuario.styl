.izquierda-perfil-usuario
	width 100%
	.datos-usuario
		width 90%
		margin 0 auto
		font-size 0
		text-align left
		figure
			width 30%
			display inline-block
			vertical-align top
			margin 20px auto
			img 
				width 100%
				height auto
		section
			margin-top 20px
			width 65%
			margin-left 5%
			display inline-block
			vertical-align top
			h1
				font-size 1.2rem
				color rojo-topo
				font-weight 300
				margin-bottom 20px
			p 
				font-size 1rem
				line-height 1.6rem
				color gris-texto
.derecha-perfil-usuario
	width 100%
	display inline-block
	vertical-align top
.datos-post-usuario
	font-size 0
	text-align center
	width 210px
	div
		font-size 1rem
		text-align center
		width 100px
		display inline-block
		vertical-align top
		background gris-clarito
		border-radius 10px
		padding 10px 0
		padding-bottom 15px
		margin-bottom 10px
		&:nth-child(even)
			margin-left 10px
		h4
			font-size .9rem
			margin-top 10px
			margin-bottom 10px
		p 
			line-height 1.2rem
.canvas
	width 90%
	margin 0 auto
	padding 20px 0
.header-usuario h3
	width 90%
@media screen and (min-width:600px)
	.datos-post-usuario
		font-size 0
		width 90%
		div
			font-size 1rem
			text-align center !important
			width 18%
			height auto
			margin-left 2.5% !important
			display inline-block
			vertical-align top
			background gris-clarito
			border-radius 10px
			padding 10px 0
			padding-bottom 15px
			h4
				font-size .9rem
				margin-top 10px
				margin-bottom 10px
			p 
				line-height 1.2rem
				width 100px
				text-align center !important
			&:first-child
				margin-left 0% !important
@media screen and (min-width:1000px)
	.izquierda-perfil-usuario
		width 25%
		display inline-block
		vertical-align top
		.usuario 
			padding-bottom 20px
		.datos-usuario
			width 90%
			margin 0 auto
			font-size 1rem
			margin-bottom 10px
			text-align left
			figure
				width 100%
				margin 20px auto !important
				img 
					width 100%
					height auto
			section 
				width 100%
				margin-top 0
				margin-left 0
				h1
					margin-bottom 10px !important
	.derecha-perfil-usuario
		width 70%
		margin-left 5%
		display inline-block
		vertical-align top
	.canvas
		width 90%
		margin 0 auto
		padding 20px 0