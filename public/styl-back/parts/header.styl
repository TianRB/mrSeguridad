header 
	width 100%
	height 50px
	position relative
	z-index 1
	background #fff
	#logo-back
		width 50%
		height 100%
		position relative
		display inline-block
		vertical-align top
		font-size 0
		.desplegador-menu
			width 30%
			height 50px
			line-height 50px
			background rojo-topo
			display inline-block
			vertical-align top
			font-size 1.5rem
			text-align center
			color #fff
		figure
			display inline-block
			vertical-align top
			height 45px
			margin-top 5px
			width 60%
			margin-left 5%
			background url("../img/logo-mr.png") no-repeat
			background-size auto 100% !important
.inicio-sesion
	width 50%
	display inline-block
	vertical-align top
	height 100%
	position absolute 
	.contenedor-inicio-sesion
		width 90%
		margin 0 auto
		margin-top 10px
	.avatar
		float right
		.usuario-avatar
			display inline-block
			vertical-align top
			width 80px
			font-size .8rem
			text-align right
			margin-right 2px
			color gris-texto
		figure
			display inline-block
			vertical-align top
			width 30px
			height 30px
			img
				width 100%
				height auto
@media screen and (min-width:1000px)
	header 
		width 100%
		height 100px
		position relative
		z-index 1
		background #fff
		#logo-back
			background gris-logo
			width 20%	
			.desplegador-menu
				display none
			figure
				height 80px
				margin-left 20%
				margin-top 14px
				background url("../img/logo-mr.png") no-repeat
		.inicio-sesion
			width 80%
		.contenedor-inicio-sesion
			max-width 900px
			margin 0 auto
			margin-top 13px !important
			.avatar
				.usuario-avatar
					margin-top 16px
				figure
					width 44px
					height 44px
				




