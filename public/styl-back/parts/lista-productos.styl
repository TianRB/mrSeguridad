@media screen and (min-width:700px)
  .lista-productos
    article
      font-size 0
      figure 
        width 20%
        overflow hidden
        height auto 
        display inline-block
        vertical-align top 
        img 
          width 90px
      .caracteristicas-producto
        width 80%
        display inline-block
        vertical-align top 
        table 
          width 100%
          margin-left 1px
@media screen and (min-width:837px)
  .lista-productos
    article
      figure 
        width 15%
        height 48px
        img 
          width 90px
          margin-top -8px
      .caracteristicas-producto
        width 85%



