.lista-productos
  width 100%
  height auto
  margin 0 auto
  font-size 0
  margin-top 15px !important
  padding-bottom 0 !important
  padding-top 0
  position relative
  article
    width 100%
    margin 0 auto
    padding-top 0px
    font-size 0
    figure 
      width 100%
      display inline-block
      vertical-align top
      padding 20px 0px
      margin 0px 0
      img 
        width 150px
        height auto
    .caracteristicas-producto
      width 100%
      display inline-block
      vertical-align top
      table
        width 100%
        tr
          width 100%
          &:first-child
             width 40%
          &:last-child
             width 60%
          td,th
            font-size .7rem
            font-weight 300
            width 25%
            padding 10px 5px
            line-height 1rem
            text-transform uppercase
          th 
            background gris-oscuro
            color #fff
          td 
            background gris-fondo
