			h2 
				font-size 2.5rem
			p 
				font-size 1.2rem
				line-height 1.8rem
	.contenedor-video
		height initial !important
		video
			width 100% !important
	.seccion-categorias
		padding 60px 0
		article
			max-width 500px
			margin-bottom 50px
			h2 
				font-size 2.5rem
				margin-bottom 20px
			p 
				color gris-mr
				font-size 1.2rem
				line-height 1.8rem
