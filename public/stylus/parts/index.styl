	.contenedor-video
		height 600px !important
		video
			width 100% !important
	.seccion-categorias
		padding 60px 0
		article
			max-width 500px
			margin-bottom 50px
			h2 
				font-size 2.5rem
				margin-bottom 20px
			p 
				color gris-mr
				font-size 1.2rem
