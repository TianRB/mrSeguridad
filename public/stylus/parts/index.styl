		margin-top -80px
	.diagonal-uno
		width 100%
		height 10px
		background #9a9a99
		//transform skewY(-3deg)
	.diagonal-dos
		width 100%
		height 10px
		background #636463
		//transform skewY(-3deg)
	.diagonal-tres
		width 100%
		height 10px
		background #4a4a49
		//transform skewY(-3deg)
	.contenedor-video
		background rgba(30, 30, 30, 1)
		width 100%
		height 300px
		overflow hidden
		//transform skewY(-3deg)
		border-bottom 10px solid rgba(37, 44, 94, .60)
		video 
			width auto	
			opacity .10
.seccion-categorias
	padding 40px 0
	article
		width 90%
		margin 0 auto 
		text-align center
		z-index 2
		margin-bottom 30px
		h2 
			color rojo-mr 
			font-size 1.5rem
		p 
			color gris-mr
			font-size 1rem
			line-height 1.6rem
	.categorias-index
		text-align center
		article
			width 150px
			height 150px
			position relative
			display inline-block
			vertical-align top
			margin 10px 
			&:nth-child(1)
				.contenedor-video-categorias
					background rgba(100, 20, 14, 1)
			&:nth-child(2)
				.contenedor-video-categorias
					background rgba(215, 130, 13, 1)
			&:nth-child(3)
				.contenedor-video-categorias
					background rgba(223, 51, 20, 1)
			&:nth-child(4)
				.contenedor-video-categorias
					background rgba(80, 39, 113, 1)
			&:nth-child(5)
				.contenedor-video-categorias
					background rgba(26, 33, 62, 1)
			&:nth-child(6)
				.contenedor-video-categorias
					background rgba(44, 136, 57, 1)
			&:nth-child(7)
				.contenedor-video-categorias
					background rgba(0, 81, 129, 1)
			&:nth-child(8)
				.contenedor-video-categorias
					background rgba(0, 0, 0, 1)

			.contenedor-video-categorias
				width 100%
				height 100%
				position absolute
				overflow hidden
				video
					width auto 
					height 100%
					opacity .10
			.texto-categorias
				width 80%
				left 10%
				text-align left
				position absolute
				top 60px
				h2 
					font-size 1.2rem
					color #fff
					font-weight 300
@media screen and (min-width: 700px)
	.contenedor-slide
		height 500px
		.s_element
			.fondo-slide
				img 
					width 110%
					height 100%
			.texto-slide
				width 300px
				top 150px
				text-align left
				h2
					font-size 2.5rem
					margin-bottom 10px
				p 
					font-size 1.2rem
					line-height 1.8rem
				a 
					margin-top 20px
				.btn-slide
					margin-left 0 !important
				.btn-linea
					left 0%
					margin-left 5px
	.unete
		width 100%
		article
			width 500px
			left 50%
			margin-left -250px
			h2 
				font-size 2.5rem
