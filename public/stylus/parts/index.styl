.contenedor-slide
	width 100%
	height 0px
	padding-bottom 40%
	margin-top 0px
	z-index 0
	position relative
	overflow hidden
	background #000
	article 
		&:nth-child(1)
		&:nth-child(2)
			.texto-slide
				display none
		&:nth-child(3)
			.texto-slide
				display none
	.s_element
		opacity 0
		transition all 1s 
		position absolute
		width 100%
		height 100%
		.fondo-slide
			width 100%
			height 100%
			position absolute
			z-index 0
			img
				width 120%
				height auto
				margin-left -70px
		.producto-slide
			width 100%
			height 100%
			position absolute
			z-index 1
			transition 1.5s all cubic-bezier(.45,.22,.63,.93)
			opacity 0
			img 
				width 120%
				margin-left 50px
				height auto
		.texto-slide
			width 90%
			left -1000px
			color #fff
			position relative 
			z-index 3
			top 250px
			text-align center
			transition 1.5s all cubic-bezier(.45,.22,.63,.93)
			h2
				font-size 1.5rem
				margin-bottom 10px
			p 
				font-size 1rem
				line-height 1.6rem
			a 
				text-decoration none
				margin-top 10px
				display block
				position relative
			.btn-slide
				width 100px
				height 40px
				margin 0 auto
				line-height 40px
				text-align center
				background rojo-mr
				color #fff
				text-transform uppercase
				position relative
				z-index 2
			.btn-linea
				width 100px
				height 40px
				margin-top -35px
				left 50%
				margin-left -45px
				border 2px solid #fff 
				position absolute
				z-index 1
	.s_visible
		opacity 1
		.producto-slide
			opacity 1
	.s_element
		&:nth-child(3)
			.producto-slide
				img
					animation 19s rotate linear infinite !important
					transform-origin 50% 50% !important
					animation-name slide !important
			.fondo-slide
				img
					animation 19s rotate linear infinite !important
					transform-origin 50% 50% !important
					animation-name slideFondo !important
		.producto-slide
			img
				animation 18s rotate linear infinite
				transform-origin 50% 50%
				animation-name slide
			@keyframes slide{
					0% {
						 margin-left 50px;
					}

					50% {
						 margin-left 25px;
					}
					100% {
						 margin-left -25px;
					}

			}
		.fondo-slide
			img
				animation 18s rotate linear infinite
				transform-origin 50% 50%
				animation-name slideFondo
			@keyframes slideFondo{
					0% {
						 margin-left -70px;
					}
					
					100% {
						 margin-left 0px;
					}

			}
		.texto-slide
			left 5%
			
