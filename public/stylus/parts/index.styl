	.diagonales 
		margin-top -80px
	.diagonal-uno
		width 100%
		height 10px
		background rojo-mr
		//transform skewY(-3deg)
	.diagonal-dos
		display none
		width 100%
		height 10px
		background #636463
		//transform skewY(-3deg)
	.diagonal-tres
		display none
		width 100%
		height 10px
		background #4a4a49
		//transform skewY(-3deg)
	.contenedor-video
		background rgba(30, 30, 30, 1)
		width 100%
		height 300px
		overflow hidden
		//transform skewY(-3deg)
		border-bottom 10px solid rgba(37, 44, 94, .60)
		video 
			width auto	
			opacity .10
.seccion-categorias
	padding 40px 0
	article
		width 90%
		margin 0 auto 
		text-align center
		z-index 2
		margin-bottom 30px
		h2 
			color rojo-mr 
			font-size 1.5rem
		p 
			color gris-mr
			font-size 1rem
			line-height 1.6rem
	.categorias-index
		text-align center
		article
			width 150px
			height 150px
			position relative
			display inline-block
			vertical-align top
			margin 10px 
			&:nth-child(1)
				.contenedor-video-categorias
					background rgba(100, 20, 14, 1)
			&:nth-child(2)
				.contenedor-video-categorias
					background rgba(215, 130, 13, 1)
			&:nth-child(3)
				.contenedor-video-categorias
					background rgba(223, 51, 20, 1)
			&:nth-child(4)
				.contenedor-video-categorias
					background rgba(80, 39, 113, 1)
			&:nth-child(5)
				.contenedor-video-categorias
					background rgba(26, 33, 62, 1)
			&:nth-child(6)
				.contenedor-video-categorias
					background rgba(44, 136, 57, 1)
			&:nth-child(7)
				.contenedor-video-categorias
					background rgba(0, 81, 129, 1)
			&:nth-child(8)
				.contenedor-video-categorias
					background rgba(0, 0, 0, 1)

			.contenedor-video-categorias
				width 100%
				height 100%
				position absolute
				overflow hidden
				video
					width auto 
					height 100%
					opacity 1
			.texto-categorias
				width 80%
				left 10%
				text-align left
				position absolute
				top 60px
				h2 
					font-size 1.3rem
					color #fff
					text-transform uppercase
					font-weight 700
					font-style italic
					text-shadow 2px 1px 4px rgba(100, 100, 100, 1)
					&::before
						content ''
						width 40px 
						height 2px
						margin-bottom 5px
						display block
						background #fff 
				.first-word
					font-size 1rem
					display block
					font-weight 400
