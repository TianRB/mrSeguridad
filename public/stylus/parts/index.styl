.contenedor-slide
	width 100%
	height 550px
	margin-top -80px
	z-index 0
	position relative
	overflow hidden
	.s_element
		opacity 0
		transition all 1s 
		position absolute
		width 100%
		height 100%
		.fondo-slide
			width 100%
			height 100%
			position absolute
			z-index 0
			img
				width 120%
				height 100%
				margin-left -30px
				animation 20s rotate linear infinite
				transform-origin 50% 50%
				animation-name slideFondo
			@keyframes slideFondo{
					0% {
						 margin-left -30px;
					}

					50% {
						 margin-left 0px;
					}
					100% {
						 margin-left -30px;
					}

			}
		.producto-slide
			width 100%
			height 100%
			position absolute
			z-index 1
			transition 1.5s all cubic-bezier(.45,.22,.63,.93)
			opacity 0
			img 
				width 100%
				margin-left 50px
				height 100%
				animation 20s rotate linear infinite
				transform-origin 50% 50%
				animation-name slide
			@keyframes slide{
					0% {
						 margin-left 50px;
					}

					50% {
						 margin-left 0px;
					}
					100% {
						 margin-left 50px;
					}

			}
		.texto-slide
			width 90%
			left -1000px
			color #fff
			position relative 
			z-index 3
			top 250px
			text-align center
			transition 1.5s all cubic-bezier(.45,.22,.63,.93)
			h2
				font-size 1.5rem
				margin-bottom 10px
			p 
				font-size 1rem
				line-height 1.6rem
			a 
				text-decoration none
				margin-top 10px
				display block
				position relative
			.btn-slide
				width 100px
				height 40px
				margin 0 auto
				line-height 40px
				text-align center
				background rojo-mr
				color #fff
				text-transform uppercase
				position relative
				z-index 2
			.btn-linea
				width 100px
				height 40px
				margin-top -35px
				left 50%
				margin-left -45px
				border 2px solid #fff 
				position absolute
				z-index 1
	.s_visible
		opacity 1
		.producto-slide
			opacity 1
		.texto-slide
			left 5%
			
