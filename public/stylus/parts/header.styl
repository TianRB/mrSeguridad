.body-activo
	position fixed
header
	width 100%
	height 80px
	background rgba(60, 60, 60, 1)
	position relative
	z-index 100
	.logo
		width 50%
		height 80px
		background gris-logo
		margin-bottom 0
		img
			width auto
			height 60px
			margin-left 60px
			margin-top 10px
	.menu-principal
		width 50%
		height 80px
		margin-top -80px
		position absolute 
		right 0
		z-index 3
	.rayitas
		position absolute
		width 40px
		height 40px
		cursor pointer
		top 15px
		left 50%
		transition all .5s cubic-bezier(.45,.22,.63,.93)
		margin-left -20px
		transform rotate(0deg) !important
		&:before
			content "MENU"
			margin-bottom 5px
			display block
			font-size 1rem
			color #fff
		.rayita 
			height 3px 
			background #fff 
			position absolute
			transition all .5s cubic-bezier(.45,.22,.63,.93)
			transform-origin 50%
		.rayita-uno
			width 20px 
			margin-left 20px
		.rayita-dos
			width 40px
			margin-top 9px
			opacity 1
		.rayita-tres
			width 20px
			margin-top 18px
	.rayitas-desactivas
		&:hover
			.rayita-uno
				width 40px
				margin-left 0
			.rayita-tres 
				width 40px
	.rayitas-activas
		top 15px
		.rayita 
			background rgba(255, 255, 255, .75)
		.rayita-uno
			width 40px
			margin-left 0px
			margin-top 9px
			transform rotate(45deg) !important
		.rayita-tres
			width 40px
			transform rotate(-45deg) !important
			margin-left 0px
			margin-top 9px
		.rayita-dos
			opacity 0
.nav-activo
	top 80px
	ul 
		li 
			margin-left 0
			opacity 1
	.inicio-sesion
		opacity 1
	.nosotros-menu
		opacity 1
nav 
	height 100%
	width 100%
	top -100%
	background rgba(0,0,0,1)
	padding-left 10px
	line-height 35px
	overflow hidden
	margin-left 0%
	transition all .5s 
	opacity 1
	transform-origin 50%
	z-index 2
	position absolute
	ul 
		position relative 
		z-index 4
		width 90%
		margin 0 auto
		margin-top 10px
		transition all 1s cubic-bezier(.45,.22,.63,.93)
		p 
			font-size 1.5rem
			font-weight 900
			margin-top 30px
			color #fff
		li 
			list-style none 
			margin 10px 10px
			height 30px
			margin-left -20px
			line-height 30px
			opacity 0
			a 
				font-size 1.1rem
				text-decoration none
				color #fff
				&:hover 
					color #fff
			&:nth-child(2)
				transition all .5s .3s cubic-bezier(.45,.22,.63,.93)
			&:nth-child(3)
				transition all .5s .4s cubic-bezier(.45,.22,.63,.93)
			&:nth-child(4)
				transition all .5s .5s cubic-bezier(.45,.22,.63,.93)
			&:nth-child(5)
				transition all .5s .6s cubic-bezier(.45,.22,.63,.93)
			&:nth-child(6)
				transition all .5s .7s cubic-bezier(.45,.22,.63,.93)
			&:nth-child(7)
				transition all .5s .8s cubic-bezier(.45,.22,.63,.93)
			&:nth-child(8)
				transition all .5s .9s cubic-bezier(.45,.22,.63,.93)
			&:nth-child(9)
				transition all .5s 1s cubic-bezier(.45,.22,.63,.93)

	.inicio-sesion
		width 90%
		margin 0 auto
		border-top 1px solid #fff
		margin-top 30px
		padding-top 10px
		opacity 0
		transition all .5s 1.1s cubic-bezier(.45,.22,.63,.93)
		a 
			text-decoration none
			color #fff
			padding 3px 10px 
			font-weight 400
			font-size 1.1rem
			&:nth-child(1)
				border-right 1px solid #fff
				padding-right 11px
			&:last-child
				margin-top 10px
				padding-top 10px
				display block
				border-top 1px solid #fff
				&:before
					content ""
					width 20px 
					height 20px 
					margin-right 10px
					display inline-block
					background url("../img/icono-upload.svg")
					background-size cover
	.nosotros-menu
		width 90%
		margin 0 auto
		border-top 1px solid #fff
		margin-top 0px
		padding-top 10px
		opacity 0
		transition all .5s 1.1s cubic-bezier(.45,.22,.63,.93)
		a 
			text-decoration none
			color #fff
			padding 3px 10px 
			font-weight 400
			font-size 1.1rem
			&:nth-child(1)
				border-right 1px solid #fff
				padding-right 11px
@media screen and (min-width: 500px)
	header
		.logo
			width 70%
		.menu-principal
			width 30% 
		nav 
			margin-left 0%
@media screen and (min-width: 700px)
	header
		.logo
			width 75%
		.menu-principal
			width 25% 
	nav 
		margin-left 0%
		ul 
			li 
				width 200px
				height 100px
				line-height 100px
				display inline-block
				vertical-align top
		.inicio-sesion
			padding-top 30px
			a 
				&:last-child
					margin-top 30px
					padding-top 20px
					display block
					border-top 1px solid #fff
