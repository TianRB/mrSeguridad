						content ""
						width 20px 
						height 20px 
						margin-right 10px
						display inline-block
						background url("../img/icono-upload.svg")
						background-size cover
		.nosotros-menu
			border-top 1px solid #fff
			margin-top 20px
			padding-top 30px
