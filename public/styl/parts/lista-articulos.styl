.lista-articulos
  width 47.5%
  margin 0 auto
  display inline-block
  vertical-align top
  font-size 0
  margin-top 15px !important
  padding-bottom 0 !important
  position relative
  background #fff
  &:nth-child(even)
    margin-right 5%
  article  
    figure
      width 100%
      height 130px
      padding-top 20px
      display inline-block
      vertical-align top 
      overflow hidden
      img 
        width 100%
        height auto
    section 
      width 100%
      display inline-block
      vertical-align top
      text-align left
      h2 
        font-size 1.2rem
        margin 0px 10px
        margin-top 15px
        margin-bottom 10px
        color rojo-topo
      .datos-publi
        font-size .7rem
        margin 0 10px
        color gris-texto
        div
          margin-bottom 2px
          &:last-child
            margin-bottom 0px
      .contenido
        font-size .8rem 
        margin 0 10px
        margin-bottom 10px
        display none
        color gris-texto
      .btns-notas
        border-top 1px solid gris-clarito
        font-size .8rem !important
        padding 10px 0
        margin-top 20px
        .ripple-effect
          top 0px !important
.grupo-filtro-notas
  border 1px solid gris-clarito
  border-radius 5px
  overflow hidden
  margin-bottom 10px
  select
    width 130%
    height 30px
    position relative
    z-index 1
    line-height 30px
.filtro-notas 
  .buscador 
    input:focus
      outline 0
@media screen and (min-width:700px)
  .area-principal-articulos
    width 100%
    max-width 900px
    margin 0 auto
  .lista-articulos
    width 32%
    article
      figure 
        margin 0
        img 
          width auto 
          height 100%
    &:nth-child(even)
      margin-right initial
    &:nth-child(3n+2)
      margin 0 2%
@media screen and (min-width:1000px)
  .area-principal-articulos
    width 90% !important

